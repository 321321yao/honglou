<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@id/exo_preview_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitXY"
        android:visibility="visible"/>

    <ImageButton
        android:id="@id/exo_preview_play"
        style="@style/ExoMediaButton.Play2"
        android:layout_width="45.3dp"
        android:layout_height="45.3dp"
        android:src="@drawable/icon_play"/>

    <TextView
        android:id="@+id/exo_controls_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@null"
        android:paddingLeft="15dp"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        tools:text="测试"/>

    <TextView
        android:id="@+id/exo_controls_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:background="@drawable/simple_size_shape"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        tools:text="12:12"/>
</RelativeLayout>