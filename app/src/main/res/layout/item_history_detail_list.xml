<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        >

        <ImageView
            android:id="@+id/iv_detail_cover"
            android:layout_width="128dp"
            android:layout_height="72dp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/iv_detail_cover"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:textColor="@color/home_tab_selected_color"
                android:textSize="14sp"
                tools:text="李玫瑾：孩子六岁前性格养成期没处理好，后面就不"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dip">

                <TextView
                    android:id="@+id/tv_detail_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/count_text_color"
                    android:textSize="11sp"
                    tools:text="1208次观看"/>


                <TextView
                    android:gravity="right"
                    android:id="@+id/tv_detail_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/count_text_color"
                    android:textSize="11sp"
                    tools:text="2018-04-17 15:27:22"/>

            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>


</LinearLayout>